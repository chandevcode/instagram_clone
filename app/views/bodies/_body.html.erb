<div id="<%= dom_id body %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= body.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Post:</strong>
    <%= body.post_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this body", body, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this body', edit_body_path(body), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
